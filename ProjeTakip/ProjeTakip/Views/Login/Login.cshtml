@model ProjeTakip.Models.UserLogin
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-center">
    <div class="col col-md-6 ">
        <div class="p-5">
            <div class="col-md-10">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Hoşgeldiniz</h1>
                </div>
            </div>
            @using (Html.BeginForm("Login", "Login", new { returnUrl = Request.QueryString["ReturnUrl"]}, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Mail" } })
                            @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Şifreniz" } })
                            @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.RememberMe)
                                        @Html.LabelFor(model => model.RememberMe, htmlAttributes: new { @class = "control-label" })
                                        @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-6 text-md-right">
                                    @Html.ActionLink("Şifremi Unuttum", "KulPassReset")
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Giriş Yap" class="btn btn-primary btn-user btn-block" />
                        </div>
                    </div>
                    <label class="control-label text-danger">@Html.DisplayFor(model => model.error)</label>
                </div>

            }
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

