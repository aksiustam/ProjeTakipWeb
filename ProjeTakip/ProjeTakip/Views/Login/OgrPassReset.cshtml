
@{
    ViewBag.Title = "OgrPassReset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="text-success">
            @ViewBag.Message
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label col-md-2">Öğrenci Numarası</label>
            <div class="col-md-3">
                @Html.TextBox("OgrKul", "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-3 ">
                <input type="submit" value="Gönder" class="btn btn-default btn-facebook" />
            </div>
        </div>
    </div>
}